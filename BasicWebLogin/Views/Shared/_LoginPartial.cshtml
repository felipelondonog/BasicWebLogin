@using System.Security.Claims;

<ul class="navbar-nav">
    @if (User.Claims.FirstOrDefault() != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="UserModels" asp-action="MyAccount">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="LogOut">
                Log out
            </a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="LogIn" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="LogIn" asp-action="LogIn">Login</a>
        </li>
    }
</ul>
